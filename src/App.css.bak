body {
  margin: 0;
  background: linear-gradient(135deg, #020617, #0f172a);
  font-family: Arial, sans-serif;
  color: white;
}

.app {
  text-align: center;
  padding: 20px;
}

h1 {
  margin-bottom: 20px;
  color: #38bdf8;
}

.camera-box {
  display: flex;
  justify-content: center;
}

.camera-box img {
  width: 640px;
  border-radius: 12px;
  border: 3px solid #38bdf8;
  box-shadow: 0 0 20px rgba(56, 189, 248, 0.6);
}

.result {
  margin-top: 20px;
}

.result span {
  font-size: 18px;
  color: #cbd5f5;
}

.result h2 {
  font-size: 32px;
  color: #22c55e;
}
